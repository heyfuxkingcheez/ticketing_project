#공연 전체 조회
###
GET {{domain}}/performance

#공연 등록
###
POST {{domain}}/performance
Content-Type: application/json
Authorization: Bearer {{AccessToken}}

{
	"performanceTitle": "뮤지컬 <렌트>",
  "category": 0,
	"age": 14,
	"price": 70000,
	"imageUrl": "https://ticketimage.interpark.com/Play/image/large/23/23013171_p.gif",
  "hours": 120,
  "place": "대전",
	"startDate": "2023-11-11",
	"endDate": "2024-02-25"
}

#공연 수정
###
PATCH {{domain}}/performance/16
Content-Type: application/json
Authorization: Bearer {{AccessToken}}

{
	"performanceTitle": "쏘우",
  "category": 0,
	"age": 19,
	"price": 50000,
	"imageUrl": "https://ticketimage.interpark.com/Play/image/large/23/23013171_p.gif",
  "hours": 110,
  "place": "서울",
	"startDate": "2023-11-11",
	"endDate": "2023-12-25"
}

#공연 삭제
###
DELETE {{domain}}/performance/14
Content-Type: application/json
Authorization: Bearer {{AccessToken}}

#공연 시간표 등록
###
POST {{domain}}/schedule/21
Content-Type: application/json
Authorization: Bearer {{AccessToken}}

{
  "startTime": "15:00:00",
  "endTime": "17:00:00"
}

#공연 시간표 전체 조회
###
GET {{domain}}/schedule

#공연 시간표 상세 조회
###
GET {{domain}}/schedule/21

#공연 시간표 수정
###
PATCH {{domain}}/schedule/21
Content-Type: application/json
Authorization: Bearer {{AccessToken}}

{
  "startTime": "15:00:00",
  "endTime": "17:00:00"
}

#공연 시간표 삭제
###
DELETE {{domain}}/schedule/21
Content-Type: application/json
Authorization: Bearer {{AccessToken}}
